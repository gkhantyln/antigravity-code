{
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "env": {
        "node": true,
        "es2022": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "prefer-const": "error",
        "no-var": "error",
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "prefer-arrow-callback": "error",
        "class-methods-use-this": "off",
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true
            }
        ],
        "import/prefer-default-export": "off",
        "consistent-return": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "no-continue": "off",
        "no-plusplus": "off",
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ]
    }
}